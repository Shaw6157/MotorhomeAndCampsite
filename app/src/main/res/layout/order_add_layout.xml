<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/bg_green"
    >

    <include layout="@layout/vehicle_list_layout" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBg"
        android:layout_margin="8dp"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="Check your date and price:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FROM "
                android:textStyle="bold"
                android:layout_margin="8dp"
                />

            <EditText
                android:id="@+id/od_et_datebg"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:focusable="false"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" TO "
                android:textStyle="bold"
                android:labelFor="@+id/od_et_dateed"
                android:layout_margin="8dp" />

            <EditText
                android:id="@+id/od_et_dateed"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@android:color/white"
                android:focusable="false"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">


            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:text="AMOUNT: "
                android:textSize="16sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=" $125" />


            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:text="*" />


            <TextView
                android:id="@+id/od_et_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="DAYS" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text=" = " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text=" $"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/od_et_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="--.- "
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold"
                />


        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:columnCount="2"
        android:background="@color/colorBg"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_margin="8dp"
            android:text="Check your contact detail:" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:layout_margin="6dp"
            />

        <EditText
            android:id="@+id/od_et_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@color/WHITE"
            android:focusable="false"
            android:hint="Select your title"
            android:inputType="none"
            android:textSize="14sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:layout_margin="6dp"
            />

        <EditText
            android:id="@+id/od_et_fname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@color/WHITE"
            android:inputType="text"
            android:hint="First Name"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Surname"
            android:textStyle="bold"
            android:layout_margin="6dp"
            />

        <EditText
            android:id="@+id/od_et_lname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@color/WHITE"
            android:inputType="text"
            android:hint="Last Name"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textStyle="bold"
            android:layout_margin="6dp"
            />

        <EditText
            android:id="@+id/od_et_phone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@color/WHITE"
            android:inputType="text"
            android:hint="Phone number"
            android:textSize="14sp"
            />

        <CheckBox
            android:id="@+id/od_check"
            android:layout_gravity="end"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="4dp"
            android:checked="true" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Agree to Our Terms n Condition" />
    </GridLayout>
</LinearLayout>