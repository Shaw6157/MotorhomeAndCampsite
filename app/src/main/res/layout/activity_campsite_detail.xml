<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/bg_green"
    tools:context=".view.campsite.CsDetailActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:background="@color/colorBg">

        <ImageView
            android:id="@+id/cdtl_img_title"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/vlst_tv_name"
            app:srcCompat="@drawable/splash_logo" />

        <TextView
            android:id="@+id/cdtl_tv_name"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:text="Lucky Rookie"
            android:linksClickable="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cdtl_tv_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="11dp"
            android:layout_marginEnd="15dp"
            android:text="HomePage" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBg"
        android:columnCount="2">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Address:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Auckland campsites" />




        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_vertical"
            android:text="Phone:" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0211327731" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/ic_phone_dark" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_phone_message_dark" />
        </LinearLayout>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBg"
        android:columnCount="2">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Features" />

        <EditText
            android:id="@+id/cdtl_tv_features"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/WHITE"
            android:textSize="14sp"
            android:hint="Select your title" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Introduction"
            android:layout_gravity="top"
            />

        <EditText
            android:id="@+id/cdtl_tv_info"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="top"
            android:background="@color/WHITE"
            android:hint="First Name"
            android:textSize="14sp" />



    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:background="@color/colorBg"
        >

        <ImageView
            android:id="@+id/cdtl_photo1"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            />

        <ImageView
            android:id="@+id/cdtl_photo2"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            />

        <Button
            android:layout_width="40dp"
            android:layout_height="147dp"
            android:layout_margin="8dp"
            android:background="@color/secondaryLightColor"
            android:fontFamily="sans-serif-condensed"
            android:text="more  ..."
            android:textAlignment="viewStart"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>