<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:background="@android:color/background_light">

    <ImageView
        android:id="@+id/vlst_img"
        android:layout_width="104dp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        app:srcCompat="@drawable/splash_logo" />

    <TextView
        android:id="@+id/vlst_tv_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/vlst_img"
        android:text="Lucky Rookie"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vlst_tv_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vlst_tv_amount"
        android:layout_toStartOf="@+id/vlst_tv_amount"
        android:text="NZD "
        android:textSize="18sp" />
    <TextView
        android:id="@+id/vlst_tv_amount"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="$482"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/vlst_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginStart="128dp"
        android:text="- 2 Berth"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/vlst_tv_transmission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/vlst_tv_type"
        android:layout_below="@+id/vlst_tv_type"
        android:text="- Manual"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/vlst_tv_engine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/vlst_tv_transmission"
        android:layout_below="@+id/vlst_tv_transmission"
        android:text="- 2.4L, petrol"
        android:textSize="14sp" />
</RelativeLayout>